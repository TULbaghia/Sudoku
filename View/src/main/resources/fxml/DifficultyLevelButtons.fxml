<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.prokom.view.controllers.DifficultyLevelButtonsController">
   <children>
      <ToggleButton fx:id="tgbEasy" mnemonicParsing="false" onAction="#setLevelEasy" prefHeight="30.0" prefWidth="100.0" text="Łatwy">
         <toggleGroup>
            <ToggleGroup fx:id="difficultyLevels" />
         </toggleGroup>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ToggleButton>
      <ToggleButton fx:id="tgbMedium" mnemonicParsing="false" onAction="#setLevelMedium" prefHeight="30.0" prefWidth="100.0" text="Średni" toggleGroup="$difficultyLevels">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </ToggleButton>
      <ToggleButton fx:id="tgbHard" mnemonicParsing="false" onAction="#setLevelHard" prefHeight="30.0" prefWidth="100.0" text="Trudny" toggleGroup="$difficultyLevels">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </ToggleButton>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
